{
    "compilerOptions": {
      "moduleResolution": "Node",
      "target": "es6",
      "module": "commonjs",
      "lib": ["esnext"],
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "typeRoots": [
        "./@types",
        "./node_modules/@types",
      ],
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
}